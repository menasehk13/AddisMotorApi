<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <!-- component -->
<script defer src="https://unpkg.com/alpinejs@3.9.1/dist/cdn.min.js"></script>
<script src="https://cdn.tailwindcss.com"></script>

<!-- page -->
<main class="relative min-h-screen w-full bg-white p-6">
    <!-- header -->
    <header class="w-full flex justify-between">
      <div class="flex space-x-1">
        <svg
        class="h-7 w-7 cursor-pointer text-gray-400 hover:text-gray-300"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        stroke="currentColor"
      >
        <path
          stroke-width="1"
          fill-rule="evenodd"
          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
          clip-rule="evenodd"
        ></path>
      </svg>
      <h1>COMPANY</h1>
      </div>

     
    </header>

    <section
      class="flex justify-between items-center flex-col md:left-1/2 mx-auto space-y-4 text-center"
    >
      <!-- register content -->
      <form method="post" action="/api/v1/iQ6qlRWlwWXtmGPFbBiEc4WKKAbHCLQK0HLxoGLKY0/drivers" class="space-y-4" enctype="multipart/form-data" >
        
<div class="flex space-x-4">

        <div class="">
          <header class="mb-3 text-2xl font-bold">Add New Driver</header>
          <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <input
              type="text"
              placeholder="First Name"
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
              name="firstname"
            />
          </div>
          <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <input
              type="text"
              placeholder="Last Name"
              name="larstname"
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
            />
          </div>
          <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <input
              type="text"
              placeholder="Phone Number"
              name="phonenumber"
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
            />
          </div>
          <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <input
              type="email"
              placeholder="Email Address"
              name="email"
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
            />
          </div>
          <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <input
              type="password"
              placeholder="Password"
              name="password"
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
            />
          </div>
          <div class="text-left w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <label class="font-semibold">Profile Picture</label>
            <input
              type="file"
              name="profile"
              placeholder="profile"
              required
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
            />
          </div>

          
          <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <p>Gender</p>
            <select
              type="text"
              placeholder="Gender"
              name="gender"
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
            >
          <option value="Male">Male</option>
          <option value="Female">Female</option>
        </select>
          </div>
        </div>

        <div class="md:w-1 bg-black/40 h-full">|</div>

        <div>
          <h3 class="text-xl text-left font-bold">Car Detail</h3>

          <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
            <p>Status</p>
            <select
              type="text"
              placeholder="Status"
              name="status"
              class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
            >
          <option value="Missing">Missing</option>
          <option value="Approved">Approved</option>
          <option value="InService">InService</option>
        </select>
        </div>

        <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="License Plate"
            name="licenseplate"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>
        <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            name="model"
            placeholder="Model"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>
        <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            name="color"
            placeholder="Color"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            name="productionyear"
            placeholder="Production Year"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>
        <div class="w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            name="servicetype"
            placeholder="Service Type"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>
        <div class="text-left w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
          <label class="font-semibold">Registration</label>
          <input
            type="file"
            name="registration"
            placeholder="Registration"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>
        <div class="text-left w-full rounded-2xl bg-gray-50 my-4 px-4 ring-2 ring-gray-200">
          <label class="font-semibold">Insurance</label>
          <input
            type="file"
            name="insurance"
            placeholder="insurance"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>
        </div>
      </div>
        
        <button
          type="submit"
          class="w-full rounded-2xl border-b-4 border-b-blue-600 bg-blue-500 py-3 font-bold text-white hover:bg-blue-400 active:translate-y-[0.125rem] active:border-b-blue-400"
        >
          ADD DRIVER
        </button>
      </form>

      <!-- login content -->
      <div x-show="!isLoginPage" class="space-y-4">
        <header class="mb-3 text-2xl font-bold">CANCEL</header>
        
      </div>

      
    </section>
  </div>
</main>

<script>
  document.addEventListener("alpine:init", () => {
    Alpine.data("app", () => ({
      isLoginPage: true,
    }));
  });

</script>
</body>
</html>